{
   "kind":"Pod",
   "apiVersion":"v1",
   "metadata":{
      "generateName":"htcondor-worker",
      "namespace":"default",
      "labels":{
         "app":"htcondor-worker"
      }
   },
   "spec":{
      "volumes":[
         {
            "name":"pool-password",
            "secret":{
               "secretName":"htcondor-pool-password",
               "defaultMode":384
            }
         }
      ],
      "containers":[
         {
            "name":"htcondor-worker",
            "image":"artifactory.systematica.com/docker-virtual/alahiff/htcondor-worker-v2:latest",
            "env":[
               {
                  "name":"CONDOR_HOST",
                  "value":"htcondor-collector"
               },
               {
                  "name":"SEC_PASSWORD_FILE",
                  "value":"/etc/condor/pool_password/password"
               },
               {
                  "name":"CONDOR_CPUS",
                  "value":"1"
               },
               {
                  "name":"CONDOR_MEMORY",
                  "value":"2000"
               }
            ],
            "resources":{
               "limits":{
                  "memory":"2Gi",
                  "cpu":"2"
               },
               "requests":{
                  "cpu":"100m",
                  "memory":"500Mi"
               }
            },
            "volumeMounts":[
               {
                  "name":"pool-password",
                  "mountPath":"/etc/condor/pool_password"
               }
            ],
            "imagePullPolicy":"Always"
         }
      ],
      "restartPolicy":"Never"
   }
}
